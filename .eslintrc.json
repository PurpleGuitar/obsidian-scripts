{
  "env": {
    "es2022": true,
    "node": true
  },  
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "curly": "warn",
    "eqeqeq": "error",
    "no-console": "warn",
    "no-implicit-globals": "error",
    "no-shadow": "error",
    "no-undef": "error",
    "no-unused-vars": "warn",
    "no-var": "error",
    "prefer-const": "warn",
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "strict": ["error", "global"]
  },
  "ignorePatterns": [
    ".graveyard/"
  ]
}
