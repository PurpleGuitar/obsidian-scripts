{
  "env": {
    "es2022": true,
    "node": true
  },  
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "eqeqeq": "error",
    "no-unused-vars": "warn",
    "no-console": "off"
  },
  "ignorePatterns": [
    ".graveyard/"
  ]
}
